<div class="hero-unit">
  <h1>Registration</h1>
</div>
<%= form_for resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal" } do |u| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= u.label :Email, :class => "control-label", :for => "inputEmail" %>
    <div class="controls">
      <%= u.text_field :email, :placeholder => "Email", :autofocus => true %>
    </div>
  </div>
  <div class="control-group">
    <%= u.label :Password, :class => "control-label", :for => "inputPassword" %>
    <div class="controls">
      <%= u.password_field :password, :placeholder => "Password" %>
    </div>
  </div>
  <div class="control-group">
    <%= u.label :"Confirm Password", :class => "control-label", :for => "inputPassword" %>
    <div class="controls">
      <%= u.password_field :password_confirmation, :placeholder => "Confirm Password" %>
    </div>
  </div>
  <div class="control-group">
    <%= u.label :"avatar", :class => "control-label", :for => "avatar" %>
    <div class="controls">
      <%= u.file_field :avatar %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn">Sign in</button>
    </div>
  </div>
<% end %>