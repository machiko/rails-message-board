<div class="hero-unit">
  <h1>Registration</h1>
</div>
<%= form_for :user, url: session_path(:user), html: {class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :Email, class: "control-label", for: "inputEmail" %>
    <div class="controls">
      <%= f.text_field :email, :placeholder => "Email", autofocus: true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => "control-label", :for => "inputPassword" %>
    <div class="controls">
      <%= f.password_field :password, :placeholder => "password" %>
    </div>
  </div><div class="control-group">
    <div class="controls">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit 'Sign in', class: 'btn' %>
      <%= link_to "Forgot your password?", new_password_path(:user) %>
    </div>
  </div>
<% end %>